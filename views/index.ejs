            <% } else if(autista) { %>
                <a href="autista/prenotazioni" class="btn" role="button">Prenotazioni</a>
                <a href="logout" class="btn" role="button">Logout</a>
            <% } else { %>
                <a href="gestionedocumenti" class="btn" role="button">Carica documenti</a>
                <a href="prenotazione" class="btn" role="button">Prenota</a>
                <a href="cliente/prenotazioni" class="btn" role="button">Prenotazioni effettuate</a>
                <a href="vehicleSelection" class="btn" role="button">Selezione veicolo</a>
                <a href="profilo" class="btn" role="button">Profilo</a>
                <a href="gestioneMetodiPagamento" class="btn" role="button">Metodi di Pagamento</a>
                <a href="logout" class="btn" role="button">Logout</a>
            <% } %>
            
        <%- include('partials/endContainer') -%>
    </body>
</html>

