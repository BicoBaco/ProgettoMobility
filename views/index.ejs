<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head') -%>
        <title>Progetto Mobility</title>
    </head>
    <body class="text-center">
        <%- include('partials/beginContainer') -%>
            <h1>Ciao 
                <% if(email) {   %>
                <%=email%>
                <% } else if(admin) { %>
                    admin
                <% } else { %>
                    nuovo utente
                <% } %>
            </h1>
            <% if(!email && !admin && !autista) { %>
                <a href="signup" class="btn" role="button">Registrati</a>
                <a href="login" class="btn" role="button">Accedi</a>
                <a href="accessoAmministrazione" class="btn" role="button">Accesso Amministrazione</a>
